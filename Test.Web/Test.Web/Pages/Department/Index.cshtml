@page
@model Test.Web.Pages.Department.IndexModel
@{
}

<div>List Of Department</div>
<a href="/Department/Create">Create New</a>
<br />
<table border="1">
    <tr><th>Id</th><th>Name</th><th>Edit</th><th>Delete</th></tr>
    @foreach (var item in Model.Departments)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.DepartmentName</td>
            <td><a href="/Department/Edit?Id=@item.Id">Edit</a></td>
            <td><a href="/Department/Delete?Id=@item.Id">Delete</a></td>
        </tr>
    }
</table>